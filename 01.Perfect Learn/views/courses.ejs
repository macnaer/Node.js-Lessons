<%- include('layouts/head.ejs') %>
<%- include('layouts/internal-banner.ejs') %>
<div class="container">
    <div class="row">
        <% courses.forEach( course => { %>
        <div class="col-md-4">
            <h2><%= course.title %></h2>
            <img src="<%= course.image %>" alt="<%= course.title %>" />
            <p><%= course.description %></p>
            <p><%= course.price %></p>
        </div>
        <% }) %>
    </div>
</div>
<%- include('layouts/footer.ejs') %>